# Use Node.js 20 LTS
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install curl for healthcheck
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy server code
COPY server ./server
COPY tsconfig*.json ./

# Expose port 3001
EXPOSE 3001

# Run the backend server
CMD ["npm", "run", "server"]
